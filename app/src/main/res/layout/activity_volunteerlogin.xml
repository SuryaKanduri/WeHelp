<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    android:id="@+id/activity_volunteerlogin"
    tools:context=".volunteerlogin">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >


    <EditText
    android:id="@+id/volunteerUsername"
    android:layout_width="237sp"
    android:layout_height="39sp"
    android:layout_gravity="center"
    android:layout_marginTop="400dp"
    android:typeface="sans"
    android:background="@drawable/round_buttons_login"
    android:hint=" Username"
    android:textColor="#FFF9F9"
    android:textSize="24sp" />

    <EditText
        android:id="@+id/volunteerPassword"
        android:layout_width="237sp"
        android:layout_height="39sp"
        android:layout_gravity="center"

        android:layout_marginTop="30dp"
        android:typeface="sans"
        android:background="@drawable/round_buttons_login"
        android:hint=" Password"
        android:textColor="#FFF9F9"
        android:textSize="24sp" />

    <Button
        android:id="@+id/volunteerlogin"
        android:layout_width="231dp"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/login_button"
        android:text="Login"
        android:textAlignment="center"
        android:textColor="#FDFDFE"
        android:textSize="24sp"
        android:typeface="sans" />

    <Button
        android:id="@+id/volunteersignup"
        android:layout_width="134dp"
        android:layout_height="31dp"

       android:layout_gravity="center"
        android:text="SignUp"
        android:textAlignment="center"
        android:textColor="#FDFDFE"
        android:textSize="24sp"
        android:textStyle="normal"
        android:typeface="sans"
        android:background="@drawable/login_button"
        />

</LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>